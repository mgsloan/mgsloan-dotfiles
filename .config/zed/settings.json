{
  "agent": {
    "preferred_completion_mode": "burn",
    "inline_assistant_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4"
    },
    "always_allow_tool_actions": true,
    "default_profile": "write",
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4"
    }
  },
  "profiles": {
    "big-screen": {
      "ui_font_size": 7.0,
      "buffer_font_size": 7.0
    }
  },
  "ui_font_size": 13.0,
  "buffer_font_size": 13.0,
  "buffer_font_family": "Hack",
  "theme": {
    "mode": "system",
    "light": "Ayu Light",
    "dark": "Ayu Dark"
  },
  "current_line_highlight": "none",
  "cursor_blink": false,
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "always"
  },
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "cargo": {
          "targetDir": "target/analyzer/"
        },
        "check": {
          "command": "clippy"
        },
        "completion": {
          "postfix": {
            "enable": false
          }
        },
        "assist": {
          "preferSelf": false
        },
        "typing": {
          "triggerChars": ""
        },
        "numThreads": 8
      }
    }
  },
  "dev": {
    "experimental.theme_overrides": {
      "title_bar.background": "#332429"
    }
  },
  // Used by mgsloan's custom dogfood builds, not an official Zed thing.
  "dogfood": {
    "experimental.theme_overrides": {
      "title_bar.background": "#24332e"
    }
  },
  "stable": {
    "experimental.theme_overrides": {
      "title_bar.background": "#000000"
    }
  },
  "languages": {
    "Rust": {
      "preferred_line_length": 100
    },
    "TOML": {
      "formatter": "prettier",
      "prettier": {
        "allowed": true
      }
    },
    "Markdown": {
      "soft_wrap": "bounded",
      "show_edit_predictions": false
    },
    "JSON": {
      "use_autoclose": true
    },
    "JavaScript": {
      "format_on_save": "off"
    }
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "use_autoclose": false,
  "calls": {
    "mute_on_join": true
  },
  "show_signature_help_after_edits": true,
  "confirm_quit": true,
  "tab_bar": {
    "show": false
  },
  "gutter": {
    "line_numbers": false,
    "runnables": false,
    "folds": false,
    "breakpoints": false
  },
  /*
  "scrollbar": {
    "search_results": false,
    "diagnostics": "none",
    "selected_symbol": false
  },
  */
  "scrollbar": {
    "show": "never"
  },
  "title_bar": {
    "show_user_picture": false
  },
  "outline_panel": {
    "indent_size": 14
  },
  "project_panel": {
    "indent_size": 14
  },
  "audio": {
    "experimental.rodio_audio": true
  },
  "toolbar": {
    "quick_actions": false
  },
  "load_direnv": "direct",
  "use_system_path_prompts": false,
  "inline_code_actions": false,
  "buffer_line_height": { "custom": 1.3 }
}
